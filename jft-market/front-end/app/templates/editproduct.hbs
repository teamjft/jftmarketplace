<h1 class="text-center text-info"> || Edit Product page || </h1>
<div class="container">
    <form {{action "editProduct" model on="submit" }}>
        <h3 class="w3-wide w3-opacity text-center">
            <span class="glyphicon glyphicon-thumbs-up"> </span> Update Product Form..
            <span class="glyphicon glyphicon-thumbs-up"> </span>
        </h3>
        <div class="jumbotron">
            <div class="form-group">
                <label for='name'>Product Name</label> {{input value=model.name id='name' class="form-control"}}
            </div>

            <div class="form-group">
                <label for='price'>Product Price</label> {{input value=model.price id='price' class="form-control"}}
            </div>

            <div class="form-group">
                <label for='description'>Product Description</label> {{input value=model.description id='description'
                class="form-control"}}
            </div>

            <div class="form-group">
                <label for='category'>Product Category..</label>
                <select class="form-control" onchange={{ action "chooseCategory" value="target.value" }}>
                {{#each model.product.categories as |category|}}
                    <option value={{category.name}} selected={{eq category.name model.category}}>{{category.name}}</option>
                {{/each}}
            </select>
            </div>

            <div class="form-group text-center">
                <button class="btn btn-primary" type="submit">Update</button>
                <button class="btn" type="button">Reset</button>
            </div>
        </div>
    </form>
</div>